@model IEnumerable<SeaSharpe_CVGS.Models.Game>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Download
        </th>
        <th>
            Hard Copy
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Platform)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ESRB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuggestedRetailPrice)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.CheckBox("download_" + item.Id)
        </td>
        <td>
            @Html.CheckBox("hardCopy_" + item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Platform.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ESRB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuggestedRetailPrice)
        </td>
    </tr>
}
</table>
@if (TempData["EmptyCart"] != null)
{
    <p>@TempData["EmptyCart"]</p>
    <br/>
}

@(Html.ActionLink("Remove Selected", "Delete", "order", null, new { @class = "btn btn-primary" }))
@(Html.ActionLink("Empty Cart", "DeleteCart", "order", null, new { @class = "btn btn-primary" }))
<br/>
@(Html.ActionLink("Continue Shopping", "Index", "Game", null, new { @class = "btn btn-primary" }))
@(Html.ActionLink("Checkout Now", "Index", "Home", null, new { @class = "btn btn-primary" }))

