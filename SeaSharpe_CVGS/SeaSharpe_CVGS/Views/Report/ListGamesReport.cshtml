@model IEnumerable<SeaSharpe_CVGS.Models.Game>
@{
    ViewBag.Title = "Games List Report";
}
<link rel="stylesheet" href="~/Content/report.css" type="text/css">
<h1>@ViewBag.Title</h1>
<hr/>
<div class="row">
    <div class="col-lg-12">
        <div class="col-md-10 col-md-offset-1">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Platform)
                    </th>
                    <th>
                        View Game Details
                    </th>
                    <th>
                        Print Game Details
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Platform.Name)
                        </td>
                        <td>
                            @Html.ActionLink("View", "GameDetailsReport", new { id = item.Id }, new { @class = "btn greenButton" })
                        </td>
                        <td>
                            <input type="button" class="defaultButton btn" value="Print" />
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
